---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

export type Props = {
  title?: string;
  date?: Date;
  images: CollectionEntry<'post'>["data"]["images"];
};

const { images, title, date } = Astro.props;
---

<script>
  import "@atrium-ui/mono/track";
</script>

<div class="images">
  <a-track overflowscroll class="pt-6">
    {
      images?.map((image) => {
        const ar = image.width / image.height;
        const height = 420;
        return (
          <div class="flex-none first:pl-6 last:pr-6">
            <img decoding="async" loading="lazy" class="slide-image mr-2" src={image.src} height={height} width={height * ar} alt={image.src} />
          </div>
        );
      })
    }
  </a-track>
  <div class="circle pt-5">
    <div class="title">
      <span>{title}</span>
      {date && <span class="date">{date.toUTCString().split(" ").slice(2, 4).join(" ")}</span>}
    </div>
  </div>
</div>

<style>
  a-track {
    overflow: visible;
  }

  .images {
    position: relative;
    overflow: hidden;
  }

  .title {
    display: inline-flex;
    justify-content: space-between;
    width: calc(100% - 180px);
    opacity: 0.7;
  }

  .date {
    opacity: 0.5;
  }

  .circle::before {
    content: "";
    display: inline-block;
    margin-left: 8px;
    margin-right: 15px;
    width: 12px;
    height: 12px;
    border: 1px solid var(--color-fg-1);
    border-radius: 50%;
    transform: translateX(-50%);
  }

  .images::before {
    content: "";
    display: block;
    position: absolute;
    left: 8px;
    top: 20px;
    width: 1px;
    height: calc(100% - 40px);
    background: var(--color-fg-1);
  }

  .slide-image {
    display: block;
    overflow: hidden;
    border: none;
  }

  @media screen and (max-width: 767px) {
    .slide-image {
      height: 240px;
      width: auto;
    }
  }
</style>
