---
import { Image } from "astro:assets";
import ExternalLinkIcon from "../assets/external-link.svg";

interface Props {
  title: string;
  description: string;
  link: string;
  image: any;
}

const { title, description, link, image } = Astro.props;
---

<a href={link} target="_blank">
  <div class="card">
    <div class="background">
      <Image class="background-image" src={image} width={269} height={269 * 1.5} alt={title} />
    </div>
    <div class="caption">
      <div class="link-indicator">
        Open
        <img class="icon" src={ExternalLinkIcon.src} alt="external link" />
      </div>
      <h2 class="headline-accent">{title}</h2>
      <hr />
      <div class="description">{description}</div>
    </div>
  </div>
</a>

<style>
  img.icon {
    margin-left: 2px;
    margin-bottom: 1px;
  }
  .card {
    display: inline-block;
    overflow: hidden;
    border-radius: 8px;
    background: var(--color-bg-1);
    border: 1px solid var(--color-bg-1);
    position: relative;
    width: 100%;
  }
  .card:hover .background-image {
    transform: scale(1.03);
  }
  .caption {
    z-index: 100;
    position: absolute;
    top: 0;
    left: 0;
    padding: 10px 20px 30px 20px;
    box-sizing: border-box;
    height: 100%;
    display: grid;
    grid-template-rows: 1fr auto auto auto;
  }
  .description {
    min-height: 100px;
  }
  .link-indicator {
    opacity: 0.69;
    text-align: right;
  }
  .background-image {
    transition: transform 0.33s ease;
    display: block;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
  .background::after {
    content: "";
    z-index: 10;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: linear-gradient(
      -25deg,
      rgba(30, 30, 32, 1) 10%,
      rgba(30, 30, 32, 0.7694),
      rgba(30, 30, 32, 0)
    );
  }
  h2 {
    margin: 0;
  }
</style>
