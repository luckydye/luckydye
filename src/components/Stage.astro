---
import Introduction from "./Introduction.astro";
---

<script>
  import "./Animation.js";
</script>

<div class="pt-16 pb-6">
    <div class="container grid">
      <div class="stage-background absolute inset-0">
        <video src="/portfolio.webm" width="1280" height="720" class="w-full h-full" muted autoplay playsinline loop />
      </div>

      <div class="logo">
          <a-animation width={200} height={400} src="/logo.riv"></a-animation>
      </div>

      <Introduction />
    </div>
</div>

<style>
    .stage-background {
      z-index: -1;
      height: 750px;
      width: 100vw;
    }

    .stage-background::after {
      content: "";
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(0180deg,var(--color-bg-0) 2%, #0f0f0f00,var(--color-bg-0) 100%);
    }

    .stage-background video {
      object-fit: cover;
      object-position: center;
      opacity: 50%;
      filter: brightness(0.75);
    }

    .container {
        grid-template-columns: 300px auto;
        align-items: center;
        justify-content: center;
        grid-gap: 100px;
    }
    .logo {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 40px;
        height: 440px;
        --width: 100%;
        --height: auto;
    }
    @media screen and (max-width: 640px) {
        .container {
            align-items: flex-start;
            grid-template-columns: 1fr;
            grid-template-rows: 250px auto;
            grid-gap: 0px;
        }
        .logo {
            height: 100%;
            --height: 300px;
        }
    }
</style>
