---
import "../style/global.css";
import "../style/main.css";
import "../style/images.css";
import "../style/teaser.css";
import "../style/project.css";

import Link from "../components/Link.astro";

export type Props = {
  meta: {
    title: string;
    description?: string;
    image?: string;
  };
};

const props = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="theme-color" content="#1e1e20">

    <title>{props.meta?.title}</title>

    {
      props.meta?.description ? (
        <meta name="description" content={props.meta?.description} />
      ) : null
    }

    <meta property="og:title" content={props.meta?.title} />
    <meta property="og:description" content={props.meta?.description} />

    {
      props.meta?.image ? (
        <meta property="og:image" content={Astro.site + props.meta.image} />
      ) : null
    }

    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon" />

    <script>
      import "@atrium-ui/elements/track";
    </script>

    <slot name="head" />
  </head>

  <body>
    <main class="overflow-hidden lg:overflow-visible max-w-[1100px] mx-auto px-8">
      <slot name="main" />
    </main>

    <footer class="pb-40 pt-20 max-w-[1100px] mx-auto px-8">
      <div class="container pt-10 pb-20">
        <h2 class="mb-4 text-2xl">Connect</h2>
        <div class="mb-1">
          <Link link="twitter">@timh4v</Link>
        </div>
        <div class="mb-1">
          <Link link="mail">tim.h4vlicek@gmail.com</Link>
        </div>
      </div>
    </footer>
  </body>
</html>
